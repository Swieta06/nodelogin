<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <title>Hello, world!</title>
  </head>
  <body>
    <!-- <h1>register</h1> -->
    <%- include('partials/nav')%>
    <h1 class="text-center">Register</h1>
    <!-- error massage -->
    <div class="login">
      <form method="POST" action="/users/register" id="'login-form">
        <div class="row justify-content-center">
          <div class="col-md-4">
            <div class="mb-2">
              <ul>
                <% if(typeof errors != 'undefined'){%> <% errors.forEach(error=>{ %>
                <li><%= error.message %></li>
                <%})%> <% } %>
              </ul>
              <label for="name" class="form-label">Username </label>
              <input type="text" class="form-control rounded-pill border-dark border-2" id="name" aria-describedby="name" name="name" />
            </div>
            <div class="mb-2">
              <label for="email" class="form-label">Email </label>
              <input type="email" class="form-control rounded-pill border-dark border-2" id="email" aria-describedby="email" name="email" />
            </div>
            <div class="mb-2">
              <label for="password" class="form-label">password</label>
              <input type="text" class="form-control rounded-pill border-dark border-2" id="password" aria-describedby="password" name="password" />
            </div>
            <div class="mb-2">
              <label for="password" class="form-labe">password</label>
              <input type="text" class="form-control rounded-pill border-dark border-2" id="password2" aria-describedby="password2" name="password2" />
            </div>
            <div class="d-grid gap-2 col-6 mx-auto rounded">
              <button type="submit" value="Register" class="btn btn-dark">Register</button>
              <a href="/users/login" style="color: black">Already registered? Login here</a>
            </div>
            <!-- <a button type="Register" class="btn btn-primary" href="/register">Register</button></a> -->
            <br />
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
